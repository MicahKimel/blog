<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My place tour and travel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bulma/bulma.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/blog.styles.css" asp-append-version="true" />
</head>

<body>
    <header style="background-color: rgb(181, 118, 60);">
        <nav class="navbar" role="navigation" aria-label="main navigation" style="background-color: rgb(181, 118, 60);">
            <div class="navbar-brand">
                <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                    data-target="navbarBasicExample">
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                    <span aria-hidden="true"></span>
                </a>
            </div>

            <div id="navbarBasicExample" class="navbar-menu">
                <div class="navbar-start">

                    <a style="color: rgb(57, 76, 77)" class="navbar-item" asp-area="" asp-controller="Home"
                        asp-action="Index">Home</a>
                    <a style="color: rgb(57, 76, 77)" class="navbar-item" asp-area="" asp-controller="Home"
                        asp-action="Packages">Packages</a>
                    <a style="color: rgb(57, 76, 77)" class="navbar-item" asp-area="" asp-controller="Home"
                        asp-action="Inquiry">Inquiry</a>

                    <div class="navbar-item has-dropdown is-hoverable">

                        <div class="navbar-dropdown">
                            <hr class="navbar-divider">
                            <a class="navbar-item">
                                Report an issue
                            </a>
                        </div>
                    </div>
                </div>

                <div class="navbar-end">
                    <div class="navbar-item">
                        <div class="buttons">
                            <a class="button is-primary">
                                <strong>Sign up</strong>
                            </a>
                            <a class="button is-light">
                                Log in
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="color: white;">
        <div class="container" style="color: white;">
            &copy; 2024 - My Place Tour and Travel
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
