<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - blog</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/blog.styles.css" asp-append-version="true" />
</head>

<body>
    <header style="background-color: rgb(123, 209, 255);">
        <div class="container">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3"
                style="background-color: rgb(123, 209, 255);">
                <div class="container-fluid" style="background-color: rgb(123, 209, 255);">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" style="color: rgb(96, 96, 96)" asp-area="" asp-controller="Home"
                                    asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: rgb(96, 96, 96)" asp-area="" asp-controller="Home"
                                    asp-action="Blog">Blog</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="hstack gap-3">
                <h1 style="color: rgb(57, 76, 77)">Micah Kimel</h1>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="color: white;">
        <div class="container" style="color: white;">
            &copy; 2024 - blog - <a asp-area="" asp-controller="Home" asp-action="Blog">Blog</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
